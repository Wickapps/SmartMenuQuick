<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollViewPopup"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/linearLayoutFling"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="5dp"
        android:paddingLeft="4dp">

        <TextView
            android:id="@+id/Text1b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="sans"
            android:text=""
            android:paddingBottom="2dip"
            android:paddingLeft="2dip"
            android:paddingRight="2dip"
            android:textColor="@color/white"></TextView>

        <LinearLayout
            android:id="@+id/llMain"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/llOptions"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/llExtras"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/llQTY"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextViewQTY"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:clickable="true"
                    android:text=""
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"></TextView>

                <TextView
                    android:id="@+id/ButQTY"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:clickable="true"
                    android:text="1"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"></TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSI"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextViewSI"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="4dp"
                android:clickable="true"
                android:text=""
                android:textColor="@color/light_grey"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/botBut"
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="0dip"
            android:orientation="horizontal">

            <Button
                android:id="@+id/butAdd"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:visibility="visible"
                android:padding="10dp"
                android:enabled="true"
                android:gravity="center"
                android:text="Add to Order"
                android:layout_gravity="center">"
            </Button>
        </LinearLayout>

    </LinearLayout>
</ScrollView>