<!-- this is a comment  -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:padding="2dip">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dip"
        android:orientation="vertical"
        android:layout_weight="6"
        android:padding="4dip"
        android:paddingLeft="3dip"
        android:gravity="center_vertical|left"
        android:layout_gravity="center_vertical|left">

        <TextView
            android:id="@+id/list_item_title"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="2dip"
            android:text="Test Line 1"
            android:textSize="14dip"
            android:textStyle="bold"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left" />

        <TextView
            android:id="@+id/list_item_subtitle"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="2dip"
            android:text="Test Line 2"
            android:textSize="14dip"
            android:textStyle="normal"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left" />
    </LinearLayout>

    <TextView
        android:id="@+id/list_item_unitprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="3dip"
        android:layout_gravity="center"
        android:gravity="center" />

    <TextView
        android:id="@+id/list_item_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".5"
        android:paddingLeft="3dip"
        android:text="1"
        android:layout_gravity="center"
        android:gravity="center" />

    <TextView
        android:id="@+id/list_item_qtyprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="3dip"
        android:layout_gravity="center|center"
        android:gravity="center|center" />

    <!-- this is a comment -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:padding="2dip"
        android:gravity="center_vertical|right"
        android:layout_gravity="center_vertical|right">

        <CheckBox
            android:id="@+id/sentPrintersCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:visibility="visible"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="2dp"
            android:checked="true"></CheckBox>

    </LinearLayout>
</LinearLayout> 
