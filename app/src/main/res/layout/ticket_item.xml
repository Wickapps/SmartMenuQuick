<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ticket_item_ll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dip">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:padding="4dip"
        android:paddingLeft="3dip"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/ticket_item_source"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dip"
            android:text="Order Source"
            android:textSize="14dip"
            android:textStyle="bold"
            android:layout_gravity="center_vertical|center"
            android:gravity="center_vertical|center" />

        <TextView
            android:id="@+id/ticket_item_orderid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dip"
            android:textColor="@color/black444"
            android:background="@color/rgbccc"
            android:text="Order ID"
            android:layout_marginTop="2dip"
            android:textStyle="bold"
            android:layout_gravity="center_vertical|center"
            android:gravity="center_vertical|center" />

        <TextView
            android:id="@+id/ticket_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dip"
            android:text="Customer Name"
            android:layout_marginTop="5dip"
            android:textStyle="normal"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left" />

        <TextView
            android:id="@+id/ticket_item_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dip"
            android:text="Phone Number"
            android:textStyle="normal"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left" />

        <TextView
            android:id="@+id/ticket_item_addr1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dip"
            android:text="Address 1"
            android:textStyle="normal"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left" />

        <TextView
            android:id="@+id/ticket_item_addr2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dip"
            android:text="Address 2"
            android:textStyle="normal"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:padding="0dip"
            android:layout_margin="0dp"
            android:gravity="center_vertical|left"
            android:layout_gravity="center_vertical|left">

            <Button
                android:id="@+id/TicketEdit"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:drawableTop="@drawable/ic_menu_edit"
                android:focusable="false"
                android:clickable="true"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="Edit"
                android:textSize="12px"
                android:gravity="center"
                android:layout_gravity="center"></Button>

            <Button
                android:id="@+id/TicketCall"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:drawableTop="@drawable/ic_menu_call"
                android:focusable="false"
                android:clickable="true"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:text="Call"
                android:textSize="12px"
                android:gravity="center"
                android:layout_gravity="center"></Button>
        </LinearLayout>

        <TextView
            android:id="@+id/ticket_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dip"
            android:paddingRight="4dip"
            android:textColor="@color/black444"
            android:background="@color/rgbccc"
            android:text="Time"
            android:layout_marginTop="5dip"
            android:textStyle="normal"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left" />

        <TextView
            android:id="@+id/ticket_item_ticketid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dip"
            android:paddingRight="4dip"
            android:textColor="@color/black444"
            android:background="@color/rgbccc"
            android:text="Ticket ID"
            android:layout_marginTop="2dip"
            android:textStyle="normal"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left" />

        <TextView
            android:id="@+id/ticket_item_deviceid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dip"
            android:paddingRight="4dip"
            android:textColor="@color/black444"
            android:background="@color/rgbccc"
            android:layout_marginTop="2dip"
            android:text="User ID"
            android:textStyle="normal"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left" />

        <LinearLayout
            android:id="@+id/TicketResponseButtons"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:padding="2dip"
            android:gravity="center"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:padding="0dip"
                android:layout_margin="0dp"
                android:gravity="center_vertical|left"
                android:layout_gravity="center_vertical|left">

                <Button
                    android:id="@+id/TicketAccept"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:drawableTop="@drawable/ic_menu_mark"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="2dp"
                    android:text="Accept"
                    android:textSize="12px"
                    android:gravity="center"
                    android:layout_gravity="center"></Button>

                <Button
                    android:id="@+id/TicketCallUs"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:drawableTop="@drawable/ic_menu_call"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="2dp"
                    android:text="Call Us"
                    android:textSize="12px"
                    android:gravity="center"
                    android:layout_gravity="center"></Button>

                <Button
                    android:id="@+id/TicketReject"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:drawableTop="@drawable/ic_menu_block"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="0dp"
                    android:text="Reject"
                    android:textSize="12px"
                    android:gravity="center"
                    android:layout_gravity="center"></Button>
            </LinearLayout>

            <CheckBox
                android:id="@+id/OutOfRange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:focusable="false"
                android:clickable="true"
                android:layout_gravity="center_vertical|left"
                android:gravity="center_vertical|left"
                android:text="Out of Range"
                android:checked="false"></CheckBox>
        </LinearLayout>

        <TextView
            android:id="@+id/ticket_item_response"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dip"
            android:paddingRight="4dip"
            android:textColor="@color/black444"
            android:background="@color/rgbccc"
            android:layout_marginTop="2dip"
            android:text="Responses"
            android:textStyle="normal"
            android:layout_gravity="center_vertical|left"
            android:gravity="center_vertical|left" />

        <TextView
            android:id="@+id/ticket_item_dishes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dip"
            android:paddingRight="5dip"
            android:textColor="@color/black444"
            android:background="@color/rgbccc"
            android:text="Dishes"
            android:layout_marginTop="5dip"
            android:textStyle="bold"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical|right" />

        <TextView
            android:id="@+id/ticket_item_total"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="2dip"
            android:paddingRight="5dip"
            android:textColor="@color/black444"
            android:background="@color/rgbccc"
            android:text="Total"
            android:textStyle="bold"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical|right" />
    </LinearLayout>
</LinearLayout> 