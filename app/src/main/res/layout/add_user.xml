<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayoutAU"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:minWidth="300dip"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:layout_margin="20dip">

    <TextView
        android:id="@+id/AUtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dip"
        android:layout_marginTop="20dip"
        android:typeface="sans"
        android:text="Add New Name"
        android:layout_gravity="center"
        android:textColor="@color/light_grey"></TextView>

    <EditText
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textSize="22dip"
        android:focusable="true"
        android:scrollHorizontally="false"
        android:textColor="@color/rgbeee"
        android:background="@color/rgb222"
        android:singleLine="true"
        android:maxLength="42"
        android:padding="8dip"
        android:inputType="textNoSuggestions"
        android:layout_marginBottom="10dip"
        android:layout_marginTop="10dip"
        android:id="@+id/AUedit"
        android:layout_gravity="center"
        android:gravity="center"></EditText>

    <Button
        android:id="@+id/AUadd"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Save"
        android:textColor="@color/rgbfff"
        android:layout_marginTop="16dip"
        android:textStyle="normal"
        android:textSize="20dip"
        android:layout_gravity="center"></Button>
</LinearLayout>