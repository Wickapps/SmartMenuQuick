<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/CallDetails"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/border_grey_tight"
    android:minWidth="500dip"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="4dip"
        android:layout_marginBottom="4dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/callerHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="4dip"
            android:textSize="30sp"
            android:typeface="sans"
            android:textStyle="bold"
            android:text="Customer Details"
            android:gravity="center"
            android:layout_gravity="center"></TextView>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="0dip"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etNumber"
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLength="20"
                android:singleLine="true"
                android:padding="4dip"
                android:layout_margin="4dip"
                android:text=""
                android:hint="Number"
                android:inputType="phone"
                android:scrollHorizontally="false"
                android:textColor="@color/rgbeee"
                android:background="@color/rgb111"
                android:layout_gravity="center"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/etAddr"
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLength="40"
                android:singleLine="true"
                android:padding="4dip"
                android:layout_margin="4dip"
                android:text=""
                android:hint="Address"
                android:inputType="textNoSuggestions"
                android:scrollHorizontally="false"
                android:textColor="@color/rgbeee"
                android:background="@color/rgb111"
                android:layout_gravity="center"
                android:gravity="center"></EditText>

            <EditText
                android:id="@+id/etAddr2"
                android:layout_width="130dip"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLength="40"
                android:singleLine="true"
                android:padding="4dip"
                android:layout_margin="4dip"
                android:text=""
                android:hint="Address2"
                android:inputType="textNoSuggestions"
                android:scrollHorizontally="false"
                android:textColor="@color/rgbeee"
                android:background="@color/rgb111"
                android:layout_gravity="center"
                android:gravity="center"></EditText>

            <Button
                android:id="@+id/butSave"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Save"
                android:padding="8dip"
                android:layout_margin="10dip"
                android:textStyle="normal"
                android:layout_gravity="center"></Button>
        </LinearLayout>

        <ImageView
            android:background="@drawable/tab_selected_bar_left_pur"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="80dip"
            android:layout_marginRight="80dip" />

        <ListView
            android:id="@+id/last10List"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:typeface="sans"
            android:scrollbars="vertical"
            android:layout_weight="1.0"
            android:gravity="center"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>