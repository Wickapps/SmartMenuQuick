<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llTop"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/rgb222"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/llLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/border_grey_tight_inner"
        android:padding="15dip"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:minWidth="450dip"
        android:gravity="center">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="26dip"
            android:layout_gravity="center"
            android:padding="2dip"
            android:typeface="sans" />

        <LinearLayout
            android:id="@+id/lldoublewide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lldoublewideleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textDT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date and Time Insert Here"
                    android:textSize="18dip"
                    android:layout_gravity="center"
                    android:typeface="sans"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textFloat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register Float"
                    android:textColor="@color/rgbeee"
                    android:textSize="24dip"
                    android:layout_marginTop="10dip"
                    android:layout_gravity="left"
                    android:padding="10dip"
                    android:typeface="sans" />

                <LinearLayout
                    android:id="@+id/llLogin2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dip"
                    android:visibility="invisible"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etFloat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:focusable="true"
                        android:padding="5dip"
                        android:layout_margin="5dip"
                        android:scrollHorizontally="false"
                        android:singleLine="true"
                        android:textSize="28dip"
                        android:textColor="@color/rgbeee"
                        android:background="@color/rgb222"
                        android:maxLength="10"
                        android:minWidth="150dip"
                        android:layout_gravity="center"
                        android:gravity="center"></EditText>

                    <TextView
                        android:id="@+id/textFloat2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RMB"
                        android:visibility="gone"
                        android:textColor="@color/rgbeee"
                        android:padding="4dip"
                        android:textSize="24dip"
                        android:layout_gravity="center"
                        android:typeface="sans" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:background="@drawable/borderleft"
                android:layout_marginRight="60dip"
                android:layout_marginLeft="10dip"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" />

            <LinearLayout
                android:id="@+id/lldoublewideright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Waiter"
                    android:textColor="@color/rgbeee"
                    android:textSize="24dip"
                    android:layout_marginTop="20dip"
                    android:layout_gravity="center"
                    android:padding="10dip"
                    android:typeface="sans" />

                <Button
                    android:id="@+id/spinnerName"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:minWidth="200dip"
                    android:text="Select a Name"
                    android:drawableRight="@android:drawable/ic_menu_more"
                    android:visibility="visible"
                    android:textStyle="normal"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="10.0dip"
                    android:layout_margin="0dip"
                    android:singleLine="true"
                    android:enabled="true"
                    android:layout_gravity="center_horizontal"></Button>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/butLogin"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Start"
            android:visibility="gone"
            android:textColor="@color/rgbfff"
            android:layout_marginTop="15dip"
            android:textStyle="normal"
            android:textSize="28dip"
            android:enabled="true"
            android:gravity="left"></Button>

    </LinearLayout>
</LinearLayout>