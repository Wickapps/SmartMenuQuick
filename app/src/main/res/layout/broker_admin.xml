<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llBrokerTop"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/rgb222"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/llBrokerAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/border_grey_tight_inner"
        android:padding="10dip"
        android:gravity="center">

        <TextView
            android:id="@+id/brokerAdminTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topic Management"
            android:textSize="28dip"
            android:layout_gravity="center"
            android:padding="10dip"
            android:typeface="sans" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelGD"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Guaranteed Delivery"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:textSize="14sp"></TextView>

            <CheckBox
                android:id="@+id/guaranteeDelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"></CheckBox>
        </LinearLayout>

        <TextView
            android:id="@+id/textTopicList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topic List"
            android:textColor="@color/rgbeee"
            android:textSize="24dip"
            android:layout_gravity="left"
            android:padding="10dip"
            android:typeface="sans" />

        <ListView
            android:id="@+id/listTopics"
            android:layout_width="340dip"
            android:layout_height="0dip"
            android:drawSelectorOnTop="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:typeface="sans"
            android:background="@color/rgb222"
            android:textColor="@color/black"
            android:layout_weight="1" />

        <Button
            android:id="@+id/butNewTopic"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Add Topic"
            android:visibility="visible"
            android:textColor="@color/rgbfff"
            android:layout_marginTop="16dip"
            android:textStyle="normal"
            android:textSize="20dip"
            android:enabled="true"
            android:gravity="left"></Button>

    </LinearLayout>
</LinearLayout>