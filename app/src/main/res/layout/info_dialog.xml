<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llInfo"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/border_grey_tight"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/topTopppp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center|top"
            android:gravity="center|top"
            android:orientation="horizontal">

            <!-- Left Column -->
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="340dip"
                android:layout_marginTop="5dip"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/welcomeHeader"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dip"
                    android:textSize="30sp"
                    android:typeface="sans"
                    android:textStyle="bold"
                    android:text="SmartMenu Take Out"
                    android:gravity="center"
                    android:layout_gravity="center"></TextView>

                <TextView
                    android:id="@+id/AboutAppName"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:gravity="center"
                    android:layout_gravity="center"></TextView>

                <TextView
                    android:id="@+id/AboutVersion"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="0dip"
                    android:gravity="center"
                    android:layout_gravity="center"></TextView>

                <TextView
                    android:id="@+id/AboutFileSource"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginTop="10dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:gravity="center"
                    android:layout_gravity="center"></TextView>

                <TextView
                    android:id="@+id/AboutServerIP"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:gravity="center"
                    android:layout_gravity="center"></TextView>

                <TextView
                    android:id="@+id/AboutSMID"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:gravity="center"
                    android:layout_gravity="center"></TextView>

                <TextView
                    android:id="@+id/AboutStoreMenuID"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:gravity="center"
                    android:layout_gravity="center"></TextView>

                <TextView
                    android:id="@+id/AboutMenuVersion"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:gravity="center"
                    android:layout_gravity="center"></TextView>

                <TextView
                    android:id="@+id/AboutDeviceId"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:gravity="center"
                    android:layout_gravity="center"></TextView>

                <TextView
                    android:id="@+id/AboutWifi"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:gravity="center"
                    android:layout_gravity="center"></TextView>
            </LinearLayout>
            <!-- End Left Column -->

            <!-- Right Column -->
            <LinearLayout
                android:id="@+id/hmmmmLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:layout_marginRight="4dip"
                android:layout_marginTop="20dip"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llVVV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/label0a"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="right"
                            android:text="Wi-Fi"
                            android:textSize="14dp"></TextView>

                        <ImageView
                            android:id="@+id/lit0a"
                            android:background="@drawable/presence_invisible"
                            android:layout_marginLeft="10dp"
                            android:visibility="visible"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/label1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="right"
                            android:text="Server"
                            android:textSize="14dp"></TextView>

                        <ImageView
                            android:id="@+id/lit1aServer"
                            android:background="@drawable/presence_invisible"
                            android:layout_marginLeft="10dp"
                            android:visibility="visible"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/label2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="right"
                            android:text="Printer 1"
                            android:textSize="14dp"></TextView>

                        <ImageView
                            android:id="@+id/lit2a"
                            android:background="@drawable/presence_invisible"
                            android:layout_marginLeft="10dp"
                            android:visibility="visible"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/label3"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="right"
                            android:text="Printer 2"
                            android:textSize="14dp"></TextView>

                        <ImageView
                            android:id="@+id/lit3a"
                            android:background="@drawable/presence_invisible"
                            android:layout_marginLeft="10dp"
                            android:visibility="visible"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/label1d"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="right"
                            android:text="Printer 3"
                            android:textSize="14dp"></TextView>

                        <ImageView
                            android:id="@+id/lit4a"
                            android:background="@drawable/presence_invisible"
                            android:layout_marginLeft="10dp"
                            android:visibility="visible"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llMaster"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/labelMaster"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="right"
                            android:text="POS"
                            android:textSize="14dp"></TextView>

                        <ImageView
                            android:id="@+id/litMaster"
                            android:background="@drawable/presence_invisible"
                            android:layout_marginLeft="10dp"
                            android:visibility="visible"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/labelPOSservice"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="right"
                            android:text="POS Service"
                            android:textSize="14dp"
                            android:visibility="visible"></TextView>

                        <ImageView
                            android:id="@+id/litPOSservice"
                            android:background="@drawable/presence_invisible"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/labelBroker"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="right"
                            android:text="Broker"
                            android:textSize="14dp"
                            android:visibility="visible"></TextView>

                        <ImageView
                            android:id="@+id/litBroker"
                            android:background="@drawable/presence_invisible"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginBottom="0dip"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/labelHeart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:text="Last Heartbeat"
                            android:textSize="14dp"
                            android:visibility="visible"></TextView>

                        <TextView
                            android:id="@+id/litHeart"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:layout_margin="0dip"
                            android:padding="0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="None"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/labelTopics"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:text="Subscribed Topics"
                            android:textSize="14dp"
                            android:visibility="visible"></TextView>

                        <TextView
                            android:id="@+id/litTopics"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:layout_margin="0dip"
                            android:padding="0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="None"
                            android:visibility="visible" />

                        <Button
                            android:id="@+id/connectMQTT"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="Connect"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_marginTop="2dip"
                            android:layout_marginBottom="2dip"
                            android:layout_marginRight="0dip"
                            android:visibility="visible"
                            android:layout_gravity="right"
                            android:gravity="center"></Button>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <!-- End of 2nd Column -->

        </LinearLayout>
    </LinearLayout>
</ScrollView>